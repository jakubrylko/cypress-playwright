{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES6",
    "types": ["node"],
    "paths": {
      "@allure-results/*": ["allure/allure-results/*"],
      "@common/*": ["common/*"]
    }
  },
  "include": ["common/**/*"]
}
