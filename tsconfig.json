{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "noEmit": true,
    "paths": { "@common/*": ["common/*"] },
    "skipLibCheck": true,
    "strict": true,
    "target": "ES6",
    "types": ["node"]
  },
  "include": ["common/**/*"]
}
