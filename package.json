{
  "name": "web-automation",
  "license": "MIT",
  "author": "Jakub Ry≈Çko",
  "gh-pages": "https://jakubrylko.github.io/web-automation",
  "repository": "https://github.com/jakubrylko/web-automation",
  "scripts": {
    "format": "prettier --write . --log-level error",
    "lint": "eslint .",
    "prepare": "husky",
    "type:check": "tsc && :",
    "allure:cy:clean": "rm -rf allure/allure-results/cypress",
    "allure:cy": "allure serve allure/allure-results/cypress",
    "allure:generate": "allure generate allure/allure-results -o allure/allure-report",
    "allure:pw:clean": "rm -rf allure/allure-results/playwright",
    "allure:pw": "allure serve allure/allure-results/playwright",
    "cy:logs:off": "sed -i '' 's/log: true/log: false/' cypress/support/hooks.ts",
    "cy:logs:on": "sed -i '' 's/log: false/log: true/' cypress/support/hooks.ts",
    "cy:open": "cypress open",
    "cy:report:clean": "rm -rf cypress/report",
    "cy:run:headed:spec": "cypress run --headed --spec",
    "cy:run:spec": "cypress run --spec",
    "cy:run": "cypress run",
    "pw:report:clean": "rm -rf playwright/report",
    "pw:report": "playwright show-report playwright/report",
    "pw:test:headed": "playwright test --headed --project=chromium",
    "pw:test:ui": "playwright test --ui",
    "pw:test": "playwright test --project=chromium",
    "pw:traces:clean": "rm -rf playwright/traces"
  },
  "dependencies": {
    "@playwright/test": "^1.47.2",
    "cypress": "13.15.0",
    "typescript": "^5.6.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@faker-js/faker": "^9.0.0",
    "@types/node": "^20.11.16",
    "@zerostep/playwright": "^0.1.5",
    "allure-cypress": "^3.0.5",
    "allure-playwright": "^3.0.5",
    "cypress-plugin-api": "^2.11.1",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.1",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.10.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript-eslint": "^8.8.0"
  }
}
